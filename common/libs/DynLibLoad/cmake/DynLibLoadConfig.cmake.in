get_filename_component(DynLibLoad_CMAKE_DIR "${CMAKE_CURRENT_LIST_FILE}" PATH)
include(CMakeFindDependencyMacro)

list(APPEND CMAKE_MODULE_PATH ${DynLibLoad_CMAKE_DIR})

# NOTE Had to use find_package because find_dependency does not support
# COMPONENTS or MODULE until 3.8.0
find_package(IntelSafeString REQUIRED)
find_package(EISUtils REQUIRED)

# Include header directories
include_directories(
    ${EISUtils_INCLUDE}
    ${IntelSafeString_INCLUDE})

if(NOT TARGET eisdynlibload)
    include("${DynLibLoad_CMAKE_DIR}/DynLibLoadTargets.cmake")
endif()

set(DYNLIBLOAD_LIBRARIES eisdynlibload)
set(DYNLIBLOAD_INCLUDE   ${INSTALL_LIBDIR}/include)
