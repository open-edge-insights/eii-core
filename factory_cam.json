    "classification": {
        "mqtt_broker_host": "localhost",
        "mqtt_broker_port": 1883,
        "max_workers": 1,
        "classifiers": {
            "yumei": {
                "trigger": ["robotic_arm", "motion_detection"],
                "config": {
                    "ref_imgdir": "./agent/ref/",
                    "ref_imgcount": 4,
                    "ref_config_roi": "./agent/ref/ym_roi.json"
                }
            }
        }
    },
    "data_ingestion_manager": {
        "ingestors": {
            "video": {
                "poll_interval": 0.01,
                "streams": {
                    "basler": {
                       "22573664":{
                               "exposure": 8000
                       }
                    }
                }
            }
        }
    },
    "triggers": {
        "motion_detection": {
            "angle_sequence": [231, 629, 793, 1076],
            "white_threshold": 2000,
            "light_threshold": 1000,
            "roi_y1": 0,
            "roi_y2": 750
        },
